struct Clock
{
	uint32_t allTimeInSeconds = 0;
	uint8_t hour = 0;
	uint8_t = minutes = 0;
	const int HOUR_IN_SECONDS = 60*60;
	const int MINUTE_IN_SECONDS = 60;
};

void setTime(Clock *myClock, uint8_t newHour, uint newMinutes)
{
	(*myClock).hour = newHour;
	(*myClock).minutes = newMinutes;
	(*myClock).allTimeInSeconds = newHour*Clock.HOUR_IN_SECONDS;
}
